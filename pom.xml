                <artifactId>aliyun-sdk-oss</artifactId>
                <version>2.6.0</version>
            </dependency>
            <!-- 极光推送 -->
            <dependency>
                <groupId>cn.jpush.api</groupId>
                <artifactId>jpush-client</artifactId>
